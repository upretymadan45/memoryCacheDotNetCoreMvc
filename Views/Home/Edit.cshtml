@model Employee

<h2>Edit employee data</h2>

<form asp-action="Edit" method="Post">
    <input type="hidden" asp-for="Id"/>
    <input type="hidden" id="currentPage" name="currentPage" value="@ViewBag.CurrentPage"/>

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input type="text" class="form-control" asp-for="FullName"/>
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input type="text" class="form-control" asp-for="Age"/>
    </div>

    <div class="form-group">
        <label asp-for="Dob"></label>
        <input type="date" class="form-control" asp-for="Dob"/>
    </div>

    <input type="submit" class="btn btn-primary" value="Save"/>

</form>